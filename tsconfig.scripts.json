{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2020",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "declaration": false,
      "outDir": "./dist"
    },
    "include": ["scripts/**/*"],
    "exclude": ["node_modules", "apps/**/*", "functions/**/*"]
  }